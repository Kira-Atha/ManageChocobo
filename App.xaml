<Application x:Class="ChocoboManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChocoboManagement" xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Pas très utile d'ajouter des templates pour si peu mais " c'est possible de le faire "-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Templates/ButtonTemplate.xaml"/>
                <ResourceDictionary Source="Templates/WindowTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <sys:String x:Key="ApplicationName">ChocoboManagement</sys:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
